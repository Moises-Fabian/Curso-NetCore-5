@model Product
@{
    ViewData["Title"] = "Edit";
    string actualizar = "Actualizar";
}


<div class="card-body">
    <form class="mt-2" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="row">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.Image" />
            @if (Model.Errors.Count > 0)
            {
                foreach (var item in Model.Errors)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width:100%">
                        <span>@item.ErrorMessage</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.Name" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Price" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.Price" />
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Image" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" asp-for="@Model.Image" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Rating" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.Rating" />
                        <span asp-validation-for="@Model.Rating" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <partial name="_buttonOptionPartial" model="actualizar" />
                </div>
            </div>
            <div class="col-3 offset-1">

                @if (Model.Image != null &&  Model.Image.Length > 0)
                {
                var base64 = Convert.ToBase64String(Model.Image);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

                <img src="@imgsrc" class="img-product">

                }
                else
                {
                <img src="https://via.placeholder.com/150" class="img-product">

                }
            </div>
        </div>
    </form>
</div>


